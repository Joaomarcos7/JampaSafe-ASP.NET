    <script src="https://kit.fontawesome.com/12bf9f7698.js" crossorigin="anonymous"></script>

    <script>


        $(function () {

            $("#relatobtn").on("click", () => {
               $("#modal").load("Relatos/Create");
                $("#modal").fadeIn();
            })

            $("#excluir").click(() => {

                let ID = $("#excluir").attr("data-cod");
                if (confirm("Deseja mesmo excluir esse relato?")) {
                    $.post("Relatos/Delete", new {id: ID})
                }
            })



            $("#alterar").click(() => {

                let ID= $("#alterar").attr("data-cod");
                $("#modal").load("Relatos/Edit", new {id:ID})
                $("#modal").fadeIn();
            })

        })

    </script>
